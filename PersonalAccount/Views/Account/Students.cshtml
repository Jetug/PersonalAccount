            function formateDate(string) {
                let arr = string.substr(0, 10).split("-")
                let str = arr[2] + "." + arr[1] + "." + arr[0]

                return str
            }

            function formateDate2(string) {
                let arr = string.substr(0, 10).split("-")
                let str = arr[0] + "." + arr[1] + "." + arr[2]

                return str
            }


            let row = null
            let studentId = 0

            $(function () {
                $('#t_student').on('click', '.rowlink', function () {

                    var editWindow = new bootstrap.Modal(document.getElementById('modal_edit'))
                    editWindow.show()

                    //alert($(this).find('.id').html() - 1)
                    row = $(this);
                    studentId = $(this).find('#id').html() - 1;

                    $.ajax({
                        type: "POST",
                        url: "/Account/GetInfo",
                        data: { "id": studentId },
                        success: function (student) {
                            $("#studentId").val(studentId);

                            $("#name").val(student.Name);
                            $("#surname").val(student.Surname);
                            $("#patr").val(student.Patronymic);
                            $("#country").val(student.Country);
                            $("#birthDate").val(student.BirthDay.substr(0, 10));
                            $("#sex").val(student.Sex);
                            $("#inst").val(student.Institute);

                            $("#d_pass").text(student.Passport.Number);
                            $("#passDate").text(formateDate(student.Passport.Date));
                            $("#d_visa").text(student.Visa.Number);
                            $("#visaStartDate").text(formateDate(student.Visa.StartDate));
                            $("#visaEndDate").text(formateDate(student.Visa.EndDate));
                            $("#contractNumber").text(student.Contract.Number);
                            $("#contractDate").text(formateDate(student.Contract.Date));
                        },
                    });
                });
            });

            $('#btn_save').click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Account/SaveChanges",
                    data: {
                        "Name": $('#name').val(),
                        "Surname": $('#surname').val(),
                        "Patronymic": $('#patr').val(),
                        "Country": $('#country').val(),
                        "BirthDate": $('#birthDate').val(),
                        "Sex": $('#sex').val(),
                        "Institute": $('#inst').val(),
                    },
                    success: function (s) {
                        row.find("#td_name").text($('#name').val())
                    },
                });
            });

            var input = document.getElementById('passFile');

            $('#passPostBtn').click(function () {

                var formData = new FormData();
                formData.append('file', $("#passFile")[0].files[0])
                formData.append('studentId', studentId)

                $.ajax({
                    type: "POST",
                    url: "/Account/UploadPassport",
                    cache: false,
                    contentType: false,
                    processData: false,
                    dataType: 'json',
                    data: formData,
