        <script>
            $(function () {
                $('#t_student').on('click', '.rowlink', function () {
                    document.location.href = "#tcard";
                    $.ajax({
                        type: "POST",
                        url: "/Account/GetInfo",
                        data: { "id": $(this).find('.id').html() - 1 },
                        success: function (student) {
                            $("#cardName").text(student.Name + ' ' + student.Surname + ' ' + student.Patronymic);
                            $("#cardCourse").text(student.Course);
                            $("#cardCath").text(student.Cathedra);
                            $("#cardDep").text(student.Cathedra);
                            $("#d_name").text(student.Name);
                            $("#d_surname").text(student.Surname);
                            $("#d_patr").text(student.Patronymic);
                            $("#d_pass").text(student.Passport.Number);
                            $("#d_visa").text(student.Visa.Number);
                        },
                    });
                });
            });

            $('#btn_search').click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Account/Search",
                    data: { "line": $('#txt_search').val()},
                    success: function (s) {
                        alert(s.Name)
                    },
                });
            });
        </script>

