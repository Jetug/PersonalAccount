@using PersonalAccount.Models.Entities
@model List<Student>
@{
    ViewData["Title"] = "Личный кабинет";
    Layout = "_Master";
}

<!doctype html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <style>
        #tcard {
            background: rgba(102, 102, 102, 0.5);
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
        }

        #card {
            width: 400px;
            height: 353px;
            text-align: center;
            padding: 0px;
            border-radius: 8px;
            color: rgba(48, 77, 152, 1);
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: auto;
            background: #fff;
        }

        #documents {
            background: rgba(102, 102, 102, 0.5);
            width: 600px;
            height: 300px;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: none;
            text-align: center;
            padding: 25px;
            border: 2px solid #0000cc;
            border-radius: 10px;
            color: #0000cc;
            margin: auto;
            background: #fff;
        }
       
        #documents:target {
            display: block;
        }

        #tcard:target {
            display: block;
        }

        .tHead {
            position: flex;
            width: 1920px;
            height: 60px;
            background: #EEEFF1;
            border: 1px solid #000000;
            box-sizing: border-box;
            box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        }

        .line {
            position: relative;
            width: 400px;
            height: 10px;
            background: rgba(48, 77, 152, 1);
        }

    </style>
</head>
<body style="background-color: whitesmoke;">

    <div class="form-group">
        <input id="txt_search" type="text" name="search" class="form-control" placeholder="Поиск">
        <input id="btn_search" type="button" class="btn btn-primary" value="Поиск">
    </div>

    <div class="container">
        <table class="table table-striped">
            <thead class="tHead">
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Страна</th>
                    <th scope="col">Дата рождения</th>
                    <th scope="col">Пол</th>
                    <th scope="col">Вуз</th>
                </tr>
            </thead>
            <tbody id="t_student">
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr class="rowlink">
                            <th class="id" scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Patronymic</td>
                            <td>@item.Country</td>
                            <td>02.10.00</td>
                            <td>М</td>
                            <td>МГУТУ</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>

