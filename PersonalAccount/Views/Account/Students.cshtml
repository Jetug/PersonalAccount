@using PersonalAccount.Data.Models
@model List<Student>
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <style>
        .head {
            display: flex;
            align-items: center;
            justify-content: space-between;
            &__left

        {
            display: flex;
            align-items: center;
        }

        h1 {
            margin-left: 50px;
        }

        }

        .header {
            background-color: white;
            padding: 41px 0 0 0;
        }

        section::after {
            content: "";
            display: table;
            clear: both;
        }
        /*  eto toje  */
        #fogging {
            background: rgba(102, 102, 102, 0.5);
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
        }

        #tcard {
            background: rgba(102, 102, 102, 0.5);
            width: 600px;
            height: 300px;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: none;
            text-align: center;
            padding: 25px;
            border: 2px solid #0000cc;
            border-radius: 10px;
            color: #0000cc;
            margin: auto;
            background: #fff;
        }

        #documents {
            background: rgba(102, 102, 102, 0.5);
            width: 600px;
            height: 300px;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: none;
            text-align: center;
            padding: 25px;
            border: 2px solid #0000cc;
            border-radius: 10px;
            color: #0000cc;
            margin: auto;
            background: #fff;
        }

        #auth {
            width: 300px;
            height: 270px;
            text-align: center;
            padding: 25px;
            border: 2px solid #0000cc;
            border-radius: 10px;
            color: #0000cc;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: auto;
            background: #fff;
        }

        #fogging:target {
            display: block;
        }

        #documents:target {
            display: block;
        }

        #tcard:target {
            display: block;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
          crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
            crossorigin="anonymous"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
</head>
<body style="background-color: whitesmoke;">
    <header class="header">
        <div class="container">
            <div class="head ">
                <div class="head__left">
                    <h1>
                        Личный кабинет
                    </h1>
                </div>
                <div class="head__right auth">

                    <a href="#fogging">Авторизация</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Отчество</th>
                    <th scope="col">Страна</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>
                                <a href="#tcard" id="ref">@item.Name</a>
                            </td>
                            <td>@item.Surname</td>
                            <td>@item.Patronymic</td>
                            <td>@item.Country</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>



        <div class="tcard" id="tcard">
            <div class="card">
                <div class="card-body">
                    <h5 id="cardName" class="card-title">Владимир Алексендрович Пупкин </h5>
                    <p id="cardCourse" class="card-text">Курс </p>
                    <p id="cardCath" class="card-text">Кафедра</p>
                    <p id="cardDep" class="card-text">Отделение</p>
                    <a href="#documents" class="opencard">Документы</a>
                    <a href="#" class="btn btn-danger" value="Отмена">отмена</a>
                </div>

            </div>
        </div>


        <div class="documents" id="documents">
            <div class="card">
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Василий</th>
                                <th scope="col">Пупкин</th>
                                <th scope="col">Владимирович</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>
                                    паспорт  451798745
                                </td>
                                <td>
                                    Виза 743674234
                                </td>
                                <td></td>
                            </tr>
                    </table>
                    <a href="pr1.zip" download="pr1.zip"> Скачать документы </a>
                    <a href="#" class="btn btn-danger" value="Отмена">отмена</a>
                </div>
            </div>
        </div>
        <!--  перенеси потом на другой вейв эту авторизацию                              -->

        <div id="fogging">

            <div id="auth">
                <br>

                <div class="form-group">

                    <input type="text" name="login" class="form-control" id="formGroupExampleInput" placeholder="Введите Логин">
                </div>
                <br class="form-group">

                <input type="text" name="password" class="form-control" id="formGroupExampleInput2" placeholder="Введите Пароль"></br>

                <a href="#">
                    <input type="button" class="btn btn-danger" value="Отмена">
                    <input type="button" class="btn btn-primary" value="Ок" />
                </a>
            </div>
        </div>

        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
        <input type="button" id="btn" value="Test" />

        <script type="text/javascript">
            $(function () {
                $("#ref").click(function () {
                    $.ajax({
                        type: "POST",
                        url: "/Account/GetInfo",
                        data: { "id": 0 },
                        success: function (strudent) {
                            $("#cardName").text(strudent.Name + ' ' + strudent.Surname + ' ' + strudent.Patronymic);
                            $("#cardCourse").text(strudent.Course);
                            $("#cardCath").text(strudent.Cathedra);
                            $("#cardDep").text(strudent.Cathedra);
                        },
                        faulure: function (response) {
                            alert("ss")
                        },
                        error: function (response) {
                            alert("ss")
                        },
                    });
                });
            });
        </script>

    </div>

</body>
</html>