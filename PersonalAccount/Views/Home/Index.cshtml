@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <title>Hello ASP.NET MVC Core</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <style>
        #fogging {
            background: rgba(102, 102, 102, 0.5);
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
        }

        #auth {
            width: 300px;
            height: 50px;
            text-align: center;
            padding: 15px;
            border: 3px solid #0000cc;
            border-radius: 10px;
            color: #0000cc;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: auto;
            background: #fff;
        }

        #fogging:target {
            display: block;
        }

        .close {
            display: inline-block;
            border: 1px solid #0000cc;
            color: #0000cc;
            padding: 0 12px;
            margin: 10px;
            text-decoration: none;
            background: #f2f2f2;
            font-size: 14pt;
            cursor: pointer;
        }

            .close:hover {
                background: #e6e6ff;
            }
    </style>
</head>

<body>
    <h2>Home</h2>

    <form>
        <button name="button" value="/Account/Info" action="Check">Ok</button>
    </form>

    <a href="/Account/Info">
        <input type="button" class="btn btn-primary" value="Create">
    </a>

    @*<div>
        @TempData["buttonval"]
    </div>*@

    <div id="fogging">
        <div id="auth">
            Окно авторизации<br>
            @using (Html.BeginForm("HandleButtonClick", "Home"))
            {
                <label>Логин:</label><br />
                <input type="text" name="login" /><br /><br />
                <label>Пароль:</label><br />
                <input type="text" name="password" /><br /><br />

                <a href="#">
                    <input type="button" class="btn btn-primary" value="Отмена">
                </a>

                <input type="submit" value="Ок" />
            }


        </div>
    </div>

    <a href="#fogging">Вызвать всплывающее окно</a>

</body>
</html>